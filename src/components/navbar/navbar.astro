---
import Container from "@/components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { ModeToggle } from "@/components/ModeToggle";
import TubelightNavWrapper from "@/components/TubelightNavWrapper";

const menuitems = [
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center" aria-label="Krypton Scripts">
          <img
            src="/images/krypton-logo-optimized.avif"
            alt="Krypton Logo"
            width="80"
            height="80"
            class="w-20 h-20 object-contain"
          />
        </a>
        <div class="block lg:hidden items-center justify-center space-x-3">
          <ModeToggle client:load />
          <MenuIcon class="w-10 h-10 text-primary translate-y-2.5" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <!-- Tubelight navbar for larger screens - it will be positioned at top center -->
        <div class="hidden lg:block">
          <span class="opacity-0"> <!-- Spacer to preserve layout --></span>
        </div>
        <!-- Mobile fallback menu when JavaScript is disabled -->
        <ul class="flex flex-col lg:hidden lg:flex-row lg:gap-3">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-primary hover:text-primary/80">
                  <span>{item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <ModeToggle client:load />
      </div>
    </div>
  </header>
</Container>

<!-- Desktop tubelight navbar positioned at top center -->
<div
  class="hidden lg:block lg:fixed lg:top-5 lg:left-1/2 lg:-translate-x-1/2 lg:z-50">
  <TubelightNavWrapper client:load />
</div>

<!-- Mobile tubelight navbar fixed at bottom -->
<div
  class="lg:hidden fixed bottom-0 left-0 right-0 z-50 flex justify-center pb-4">
  <TubelightNavWrapper client:load />
</div>

<style>
  /* Add styles to ensure proper positioning and visibility */
  .fixed {
    position: fixed;
  }

  /* Make space for the fixed mobile navbar at the bottom */
  @media (max-width: 1023px) {
    :global(main) {
      padding-bottom: 5rem;
    }
  }
</style>
